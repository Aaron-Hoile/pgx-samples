<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
    <Logger name="oracle.pgx.algorithms.MovieRecommender" level="info">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="oracle.pgx.algorithms.ArticleRanker" level="info">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="GM_GENERATED" level="info">
      <AppenderRef ref="Console"/>
    </Logger>
  </Loggers>
</Configuration>
